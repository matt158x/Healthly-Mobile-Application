<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeActivity"
    android:background="#181414">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_arrow"
        android:layout_marginTop="45dp"
        android:id="@+id/back_button"
        android:layout_marginStart="30dp"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:scaleType="centerCrop"
        android:id="@+id/full_image">
    </ImageView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_below="@id/full_image"
        android:background="@color/gray"
        android:id="@+id/linear1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_image"
        android:id="@+id/meal_name"
        android:gravity="center"
        android:text="Nazwa posiÅ‚ku dla obrazka"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:fontFamily="@font/alkatr">
    </TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@id/linear1"
        android:layout_marginTop="30sp"
        android:id="@+id/linear2"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:text="Nutritional Information / 100g"
            android:textColor="@color/grey_300"
            android:fontFamily="@font/alkatr"
            android:textSize="16sp"
            android:gravity="center">

        </TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>








    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/linear2"
        android:layout_marginTop="0sp"
        android:id="@+id/linear3"
        android:background="@drawable/rounded_grey_home_button"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        >


        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories"
                android:fontFamily="@font/alkatr"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/calories_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/alkatr"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proteins"
            android:fontFamily="@font/alkatr"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/proteins_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/alkatr"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbs"
            android:fontFamily="@font/alkatr"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/carbs_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/alkatr"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fat"
            android:fontFamily="@font/alkatr"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/fat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/alkatr"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3"
        android:layout_marginTop="30sp"
        android:text="Recipe"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/alkatr"
        android:textSize="24sp"
        android:id="@+id/recipe">

    </TextView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recepta na to jest taka ze xd "
        android:layout_below="@id/recipe"
        android:textColor="@color/white"
        android:fontFamily="@font/alkatr"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:id="@+id/recipe_text">

    </TextView>




</RelativeLayout>